depends=(
  # very base
  'filesystem' 'gcc-libs' 'glibc' 'bash' 'iana-etc' 'tzdata' 'linux-api-headers' 'libxcrypt' 'libnsl'

  # console UX & TTY libs
  'ncurses' 'readline'

  # POSIX / core tools
  'coreutils' 'sed' 'grep' 'tar' 'xz' 'zstd' 'libarchive' 'util-linux' 'shadow' 'procps-ng' 'which' 'psmisc' 'inetutils' 'less'

  # editors
  'vim' 'nano'

  # toolchain & pkg management
  'make' 'pkgconf' 'pacman'

  # compression & low-level libs
  'zlib' 'lz4' 'brotli' 'libelf'

  # crypto, TLS, trust store & GnuPG stack
  'p11-kit' 'libtasn1' 'nettle' 'gnutls' 'openssl' 'libunistring' 'libidn2' 'libpsl' 'libnghttp2' 'libnghttp3' 'libssh2'
  'ca-certificates' 'ca-certificates-utils' 'ca-certificates-mozilla'
  'libgpg-error' 'libgcrypt' 'libksba' 'npth' 'pinentry' 'gnupg' 'gpgme'

  # text, XML, regex, DBs
  'expat' 'icu' 'libxml2' 'sqlite' 'pcre2' 'gdbm' 'db5.3' 'jansson'

  # networking & transfer
  'curl' 'iproute2' 'iputils' 'ethtool' 'rsync'

  # accounts / auth / RPC
  'acl' 'libldap' 'krb5' 'libsasl' 'lmdb' 'libtirpc' 'keyutils' 'libutempter'

  # hardware / storage / udev stack
  'udev' 'libudev' 'libgudev' 'e2fsprogs' 'dosfstools' 'kbd' 'kmod' 'pciutils' 'usbutils'

  # logging & admin
  'logrotate' 'sudo'

  # docs / man
  'man'

  # distro keys & mirrors
  'artixpower-keyring' 'archpower-keyring' 'artixpower-mirrorlist'

  # system users & tmpfiles
  'esysusers' 'etmpfiles'

  # profiling (as listed)
  'libsysprof-capture'
)

conflitcs=('systemd' 'systemd-libs')

package() { :; }
